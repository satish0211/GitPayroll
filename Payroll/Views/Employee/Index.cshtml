@model Payroll.Model.Employee

@{
    ViewBag.Title = "Index";
}

<div>
    @Html.ActionLink("Import from CSV", "UploadCSVFile")
</div>

<h2>Enter Payslip details : </h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Employee</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AnnualSalary)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AnnualSalary)
            @Html.ValidationMessageFor(model => model.AnnualSalary)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SuperRate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SuperRate)
            @Html.ValidationMessageFor(model => model.SuperRate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PaymentStartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PaymentStartDate)
            @Html.ValidationMessageFor(model => model.PaymentStartDate)
        </div>

        <p>
            <input type="submit" value="Generate Monthly Payslip" />
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/themes/base/css")

}
