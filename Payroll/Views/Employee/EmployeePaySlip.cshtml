@model IEnumerable<Payroll.Model.Employee>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>


<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
    <title>Monthly Payslip</title>
</head>

<body>

    <div>
        @Html.ActionLink("Back to Main Page", "Index","Employee")
    </div>

    <div style="width: 500px;">
        @Html.Grid(Model).Columns(columns =>
   {
       columns.Add(c => c.FirstName).Titled("First Name");
       columns.Add(c => c.LastName).Titled("Last Name");
       columns.Add(c => c.PaymentStartDate).Titled("Pay Period");
       columns.Add(c => c.GrossIncome).Titled("Gross Income");
       columns.Add(c => c.IncomeTax).Titled("Income Tax");
       columns.Add(c => c.NetIncome).Titled("Net Income");
       columns.Add(c => c.Super).Titled("Super");

   })
        @*WithPaging(20).Sortable(true)*@
    </div>

</body>
</html>